@model IEnumerable<Multiteca.Models.Juego.ColeccionModel>
@using System.IO

<p>
	@Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
			@*<th scope="col">@Html.DisplayNameFor(model => model.Descripcion)</th>*@
			<th scope="col">@Html.DisplayNameFor(model => model.Saga)</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			if (string.IsNullOrEmpty(item.Descripcion))
			{
				<tr>
					<td class="td-width-250">@Html.DisplayFor(modelItem => item.Nombre)</td>
					<td>
						@if (item.Saga != null)
						{
							@Html.DisplayFor(modelItem => item.Saga.Nombre)
						}
						else
						{
							<label>-</label>
						}
					</td>
					<td class="td-button-case">
						@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil btn btn-primary" })
						@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
					</td>
				</tr>
			}
			else
			{
				<tr>
					<td class="td-width-250" rowspan="2">@Html.DisplayFor(modelItem => item.Nombre)</td>
					<td>
						@if (item.Saga != null)
						{
							@Html.DisplayFor(modelItem => item.Saga.Nombre)
						}
						else
						{
							<label>-</label>
						}
					</td>
					<td rowspan="2" class="td-button-case">
						@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil btn btn-primary" })
						@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })
					</td>
				</tr>
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
				</tr>
			}
		}
	</tbody>
</table>