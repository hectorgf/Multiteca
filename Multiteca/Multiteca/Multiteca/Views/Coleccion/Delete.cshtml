@model Multiteca.Models.Juego.ColeccionModel

<div class="row">
    <h2>Nueva colección</h2>
</div>

@using (Html.BeginForm("Delete", "Coleccion", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="form-group col-md-8">
            @Html.LabelFor(model => model.Nombre):
            @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Saga):
            @Html.DropDownListFor(model => model.SagaId, (IEnumerable<SelectListItem>)ViewBag.Saga, "- Seleccione -", new { @class = "form-control", @readonly = "readonly", @disabled = "true" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = "3", @readonly = "readonly" })
        </div>
    </div>

    <div class="botonera botonera-right">
        <input type="submit" class="btn btn-danger" value="Borrar" />
        @Html.ActionLink("Volver", "index", null, new { @class = "btn btn-primary" })
    </div>
}
